{
    "compilerOptions": {
        "strict": true,
        "lib": [
            "esnext"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "pretty": true,
        "noEmitOnError": true,
        "target": "es2020",
        "outDir": "./dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "incremental": true,
        "newLine": "lf",
        // "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "useDefineForClassFields": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true, // Added for TypeORM
        "experimentalDecorators": true, // Added for TypeORM
        "strictPropertyInitialization": false // Avoid initializing Model properties
    },
    // "exclude": ["dist"],
    "include": ["src/**/*.ts"],
}